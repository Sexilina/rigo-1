##RenderMan RIB-Structure 1.1
Display "sphere.tif" "file" "rgb"
Format 320 240 1
Projection "perspective" "fov" 30
Translate 0 0 6
WorldBegin 
	LightSource "ambientlight" "light_e56d2551" "intensity" .5
	LightSource "distantlight" "light_847c1d1c" "intensity" 1.2 "form" [0 0 -6] "to" [0 0 0]
	Option "user" "string renderpass" "red"
	IfBegin "$user:renderpass == 'red'"
	Color [1 0 0]
	ElseIf "$user:renderpass == 'blue'"
	Color [0 0 1]
	Else 
	Color [0 1 0]
	IfEnd 
	Sphere 1 -1 1 360
WorldEnd 
